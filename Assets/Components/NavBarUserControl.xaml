<UserControl x:Class="TaskMastery.Assets.Components.NavBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskMastery.Assets.Components"
             mc:Ignorable="d" 
             d:DesignHeight="30"
             d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="#F5CB5C" Height="30" VerticalAlignment="Top" />
        <Button Content="Deconnexion" Margin="690,0,10,0" VerticalAlignment="Center" Height="26"/>
        <Image Name="Logo"
               HorizontalAlignment="Left" 
               Height="25" Width="25"
               VerticalAlignment="Center" Source="/Assets/Logo.png" Margin="5,0,0,0"/>
        <Button x:Name="BTN_Dashboard" Content="Dashboard" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="48,0,0,0" FontSize="12" Background="Transparent" BorderBrush="Transparent" Foreground="#333533" Click="BTN_Dashboard_Click" Cursor="Hand"/>
        <Button x:Name="BTN_Profil"  Content="Profil" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="157,0,0,0" FontSize="12" Background="Transparent" BorderBrush="Transparent" Foreground="#333533" Click="BTN_Profil_Click" Cursor="Hand"/>
    </Grid>
</UserControl>
